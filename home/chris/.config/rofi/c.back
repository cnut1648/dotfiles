configuration {
    lines: 12;
    font: "Source Sans Pro 25";
    show-icons: true;
    theme: "oxide";
    terminal: "termite";
    sidebar-mode: true;
    display-window: "Window";
    display-drun: "Drun";
    kb-row-tab: "Control+Tab";
    kb-mode-next: "Tab";
    run-shell-command: "{terminal} -e '{cmd}; read -n 1 -s'";
/*  modi: "window,run,ssh";  */
/*  there are no space between modes */
    modi: "drun,swap:~/.config/rofi/swap.sh,window,run";
}
