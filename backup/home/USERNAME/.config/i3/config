# i3-grid call rofi ui
# - hjkl: move
# - m: enter
# - n: multi-select
# - b: backspace
# - c: clear text
# - e: escape
#
# A: arrange all window (snap --all)
# C current center, with size n%
# D current move to location n
# F current move to center and resize to 100
# G Guake style
# H hide all workspace floating windows
# R reset, same as $mod+shift+n
# SF snap all current floating windows into grid
# X custom row, col, loc
bindsym $mod+n exec /bin/bash ~/.config/i3grid/manager.sh

# i3grid reset, current move to location 0, center and resize back to normal floating window (75%)
bindsym $mod+shift+n exec "python3 -m i3grid reset"


#                                  ╭──────────╮
#                                  │ i3 modes │
#                                  ╰──────────╯
# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym l resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym h resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

mode "one-quick"{
	bindsym g exec xdg-open "http://www.google.com/search?q=$(xclip -out -selection primary)"; mode "default"
	bindsym b exec xdg-open "http://www.baidu.com/s?wd=$(xclip -out -selection primary)"; mode "default"
    bindsym y exec xdg-open "http://www.youtube.com/results?search_query=$(xclip -out -selection primary)"; mode "default"
	bindsym z exec xdg-open "http://www.zhihu.com/search?q=$(xclip -out -selection primary)"; mode "default"
	bindsym d exec xdg-open "http://www.douban.com/search?q=$(xclip -out -selection primary)"; mode "default"
	bindsym l exec xdg-open "http://www.bilibili.com/search?keyword=$(xclip -out -selection primary)"; mode "default"
    bindsym a exec xdg-open "http://www.amazon.com/s?k=$(xclip -out -selection primary)"; mode "default"
    bindsym r exec xdg-open "http://www.goodreads.com/search?q=$(xclip -out -selection primary)&search_type=books"; mode "default"

	bindsym Return mode "default"
	bindsym $mod+Return mode "default"
	bindsym Escape mode "default"
	bindsym $mod+"Escape" mode "default"
	bindsym $mod+c mode "one-quick"
}

bindsym $mod+c mode "one-quick"

# Set shut down, restart and locking features
bindsym $mod+semicolon mode "$mode_system"
set $mode_system (l)ock, (e)xit, switch_(u)ser, (s)uspend, (h)ibernate, (r)eboot, (Shift+s)hutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id i3exit lock, mode "default"
    bindsym s exec --no-startup-id i3exit suspend, mode "default"
    bindsym u exec --no-startup-id i3exit switch_user, mode "default"
    bindsym e exec --no-startup-id i3exit logout, mode "default"
    bindsym h exec --no-startup-id i3exit hibernate, mode "default"
    bindsym r exec --no-startup-id i3exit reboot, mode "default"
    bindsym Shift+s exec --no-startup-id i3exit shutdown, mode "default"

    # exit system mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
